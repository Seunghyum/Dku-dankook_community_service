%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Workspace
    = include_gon
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'chart' if controller_name == "lecture_estimates" && action_name == "index"
    = javascript_include_tag 'jquery.vticker.min' if controller_name == "lecture_infos" && action_name == "index"
    = javascript_include_tag 'jquery.vticker.min' if controller_name == "home"
    = timeago_script_tag
    = csrf_meta_tags
  %body
    .wrapper
      = render "header"
      = yield
      = render "footer"

.container.content
  .row.margin-bottom-30
    .col-md-7.mb-margin-bottom-30
      .headline
        %h2 강의 평가 작성하기
      %br/
      = bootstrap_form_for [@lecture_info, @lecture_estimate], html: {multipart: true, id: "sky-form3", class: "sky-form sky-changes-3 contact-style", novalidate: "novalidate"} do |f|
        - if @lecture_estimate.errors.any?
          #error_explanation
            %h2
              = pluralize(@post.errors.count, "error")
              prohibited this post from being saved:
            %ul
              - @lecture_estimate.errors.full_messages.each do |message|
                %li= message
        .row
          .col-md-4.col-md-offset-4.text-center
            = f.select(:reason, options_for_select([['학점', '학점'], ['흥미', '흥미'],['배움', '배움']]), label: "수강 이유" )
        %br/
        .row
          .col-md-3.text-center
            .br-theme-fontawesome-stars
              = f.select(:fun, options_for_select([['1', 20], ['2', 40],['3', 60],['4', 80],['5', 100]]),{label: "흥미 & 재미"}, class: "star-rating" )
          .col-md-3.text-center
            .br-theme-fontawesome-stars
              = f.select(:teaching, options_for_select([['1', 20], ['2', 40],['3', 60],['4', 80],['5', 100]]),{label: "교수력"}, class: "star-rating" )
          .col-md-3.text-center
            .br-theme-fontawesome-stars
              = f.select(:get_grade, options_for_select([['1', 20], ['2', 40],['3', 60],['4', 80],['5', 100]]),{label: "학점따기"}, class: "star-rating" )
          .col-md-3.text-center
            .br-theme-fontawesome-stars
              = f.select(:teamwork_n_asg, options_for_select([['1', 20], ['2', 40],['3', 60],['4', 80],['5', 100]]),{label: "과제 & 조모임"}, class: "star-rating" )
        .row
          .col-sm-12
            = f.text_area :msg, class: "redactor", hide_label: true, placeholder: "후기"
        %footer.text-center
          = f.submit "작성하기", class: "btn-u btn-u-lg"
        .message
          %i.rounded-x.fa.fa-check
          %p Your message was successfully sent!
    / /col-md-9
    .col-md-5
      .headline
        %h2 적을 만한 사항
      %p 혹시 이거 안적지 않았어요?
      %ul.list-unstyled.margin-bottom-30
        %li
          %i.fa.fa-check.color-green
          %strong 점수 잘받는 방법..?
        %li
          %i.fa.fa-check.color-green
          %strong 지각해도 되나..?
        %li
          %i.fa.fa-check.color-green
          %strong 수업의 남녀 구성..?
      .headline
        %h2 커뮤니티 기본 매너
      %p 아래의 기본적인 예의를 지켜주세요.
      %ul.list-unstyled.margin-bottom-30
        %li
          %i.fa.fa-check.color-green
          %strong 예의를 지켜주세요.
        %li
          %i.fa.fa-check.color-green
          %strong 상대를 존중해주세요.
        %li
          %i.fa.fa-check.color-green
          %strong 타인을 지칭할 때 ***님으로 불러주세요.
    / /col-md-3
  / /row

<% @post.comments.each do |comment| %>
  <div class="row blog-comments margin-bottom-30">
  	<div class="col-sm-2 sm-margin-bottom-40 text-right_sm-left_xs">
  		<%= image_tag comment.user.photo ? comment.user.photo : "placeholder.jpg" %>
  	</div>
  	<div class="col-sm-10">
  		<div class="comments-itself">
  			<h5>
  				<strong><%= comment.user.username %></strong>
  				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <small><i><%= timeago_tag comment.created_at %></i></small>
  				<span>
    				<ul class="list-inline badge-lists badge-box-v1">
    					<li>
                <%= link_to like_board_post_comment_path(@board, @post, comment),id: "comment-like-btn-#{comment.id}" , remote: true  do %>
    							<i class="rounded-x ti-heart text-danger"></i>
    							<span class="badge badge-red rounded-x" id='text-white'><%= comment.get_upvotes.size %></span>
                <% end %>
              </li>
              <li>
                <%= link_to dislike_board_post_comment_path(@board, @post, comment),id: "comment-dislike-btn-#{comment.id}" , remote: true do %>
                   <i class="rounded-x ti-heart-broken"></i>
                   <span class="badge badge-gray rounded-x" id='text-white'><%= comment.get_downvotes.size %></span>
                <% end %>
              </li>
            </ul>

  				</span>
  			</h5>
  			<!-- 덧글 내용 -->
			  <p><%= comment.content.html_safe %></p>
  			<!--덧글 수정 및 삭제-->
        <% if current_user == comment.user %>
          <!--수정버튼-->
          <a style='cursor:pointer' class='edit-toggle' data-edit="edit-<%=comment.id%>" >
            <button class="btn-u btn-brd btn-brd-hover rounded-4x btn-u-orange btn-u-sm" rel="tooltip" title="수정하기">
              <i class="fa fa-edit"></i>
            </button>
          </a>

            <!--삭제버튼-->
          <% if can? :destroy, comment %>
            <%= link_to comment, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <button class="btn-u btn-brd btn-brd-hover btn-u-red btn-u-sm rounded-4x" rel="tooltip" title="삭제하기">
                <i class="fa fa-trash-o"></i>
              </button>
            <% end %>
          <% end %>
            <!--수정 폼-->
          <br/>
          <% if can? :update, comment %>
            <div class="media media-post" id='edit-<%=comment.id%>' style='display: none;'>
              <div class="media-body">
                <%= form_for [comment] do |f|%>
                  <%= f.text_area :content, :rows => 4, class: "summernote",:data => { provider: "summernote"}, placeholder: "예의 있게 써주세요"  %>
                  <br/>
                  <div class='text-center'>
                    <%= f.submit "수정하기",class: "btn-u btn-brd-hover btn-u-yellow" %>
                  </div>
                <% end %>
              </div>
            </div> <!-- end media-post -->
          <% end %>
        <% end %>

  		</div>
  	</div>
  </div>
<% end %>

= form_for @used_book do |f|
  - if @used_book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@used_book.errors.count, "error")} prohibited this used_book from being saved:"
      %ul
        - @used_book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :btitle
    = f.text_field :btitle
  .field
    = f.label :bgiver
    = f.text_field :bgiver
  .field
    = f.label :n_edition
    = f.text_field :n_edition
  .field
    = f.label :real_or_copy
    = f.text_field :real_or_copy
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :major
    = f.text_field :major
  .actions
    = f.submit 'Save'

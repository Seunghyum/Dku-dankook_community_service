<div class='row'>
  <div class='col-md-offset-3 col-md-6'>
    <p id="notice"><%= notice %></p>
    
    <p>
      <strong>Name:</strong>
      <%= @meeting.name %>
    </p>
    
    <p>
      <strong>Start time:</strong>
      <%= @meeting.start_time %>
    </p>
    
    <p>
      <strong>Content:</strong>
      <%= @meeting.content %>
    </p>
    
    <%= link_to 'Edit', edit_meeting_path(@meeting) if can? :update, @meetings %> |
    <%= link_to 'Back', meetings_path %>
  </div>
</div>
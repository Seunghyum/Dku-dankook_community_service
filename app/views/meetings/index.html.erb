<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <%= render 'simple_calendar/calendar' %>
    </div>
    <div class='col-md-4'>
      <p id="notice"><%= notice %></p>
      
      <h1>Listing Meetings</h1>
      
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Start time</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @meetings.each do |meeting| %>
            <tr>
              <td><%= meeting.name %></td>
              <td><%= meeting.start_time %></td>
              <td><%= meeting.content %></td>
              <td><%= link_to 'Show', meeting if can? :read, @meetings%></td>
              <td><%= link_to 'Edit', edit_meeting_path(meeting) if can? :update, @meetings %></td>
              <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, @meetings %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
= bootstrap_form_for(@meeting) do |f|
  - if @meeting.errors.any?
    #error_explanation
      %h2
        = pluralize(@meeting.errors.count, "error")
        prohibited this meeting from being saved:
      %ul
        - @meeting.errors.full_messages.each do |message|
          %li= message
  .field
    = f.text_field :display_tag
  .field
    = f.text_field :name
  .field
    = f.text_field :operator
  .field
    = f.select :event_type, ['학사', '총학', '동아리', '강연', '기타']
  .field
    = f.datetime_select :start_time
  .field
    = f.datetime_select :end_time
  .field
    = f.text_area :content, class: "redactor"
  .field
    = f.file_field :photo
  .actions
    = f.submit

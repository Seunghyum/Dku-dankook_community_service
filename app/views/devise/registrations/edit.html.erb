    <div class="wrapper settings">
        <div class="profile-background settings-background"> 
            <div class="filter-black"></div>  
        </div>
        <div class="profile-content section-white">
            <div class="container">
                <div class="row owner">
                    <div class="col-md-2 col-md-offset-5 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3 text-center">

                    <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                      <div class="fileinput-new thumbnail img-circle img-no-padding" style="width: 150px; height: 150px;">
                         <%= image_tag "placeholder.jpg", alt: "Circle Image"  %>
                      </div>
                      <div class="fileinput-preview fileinput-exists thumbnail img-circle img-no-padding" style="max-width: 150px; max-height: 150px;"></div>
                      <div>
                        <span class="btn btn-default btn-file"><span class="fileinput-new">사진 바꾸기</span><span class="fileinput-exists">Change</span><input type="file" name="..."></span>
                        <br />
                        <a href="#" class="btn btn-simple btn-danger fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                      </div>
                    </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "settings-form" }) do |f| %>
                            <%= devise_error_messages! %>
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label>닉네임</label>
                                        <%= f.text_field :username, autofocus: true, class: "form-control border-input", placeholder: "닉네임" %>
                                    </div>
                                </div>
                            </div>
                          <div class="form-group">
                                <label>현재 비밀번호</label>
                                <%= f.password_field :current_password, autocomplete: "off", class: "form-control border-input", placeholder: "비밀번호 재확인" %>
                          </div>
                          <div class="form-group">
                                <label>바꿀 비밀번호</label>
                                <%= f.password_field :password, autocomplete: "off", class: "form-control border-input", placeholder: "비밀번호 재확인" %>
                          </div>
                          <div class="form-group">
                                <label>바꿀 비밀번호 재확인</label>
                                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control border-input", placeholder: "비밀번호 재확인" %>
                          </div>
                          
                          <div class="row">
                              <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                                <%= f.submit "저장하기", class: "btn btn-block btn-info" %>
                              </div>
                          </div>
                        <% end %>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
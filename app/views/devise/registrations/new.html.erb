<div class="wrapper full-screen register">
    <div class="background"> 
        <div class="filter-black"></div>
        <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-1 col-sm-7 col-xs-12">
                        <div class="info info-horizontal">
                            <div class="icon">
                                <i class="fa fa-umbrella"></i>
                            </div>
                            <div class="description">
                                <h3> We've got you covered </h3>
                                <p>Larger, yet dramatically thinner. More powerful, but remarkably power efficient. Everything you need in a single case.</p>
                            </div>
                        </div>
                        <div class="info info-horizontal">
                            <div class="icon icon-primary">
                                <i class="fa fa-map-signs"></i>
                            </div>
                            <div class="description">
                                <h3> Clear Directions </h3>
                                <p>Efficiently unleash cross-media information without cross-media value. Quickly maximize timely deliverables for real-time schemas.</p>
                            </div>
                        </div>
                        <div class="info info-horizontal">
                            <div class="icon icon-info">
                                <i class="fa fa-user-secret"></i>
                            </div>
                            <div class="description">
                                <h3> We value your privacy </h3>
                                <p>Completely synergize resource taxing relationships via premier niche markets.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-5 col-xs-12">
                        <div class="demo-card">
                            <h3 class="title text-center">회원가입</h3>
                            <br>
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "register-form"}) do |f| %>
                              <%= devise_error_messages! %>
                              
                              <%= f.email_field :email, autofocus: true, class: "form-control",  placeholder: "학교 웹메일" %>
                              
                              <%= f.text_field :username, class: "form-control",  placeholder: "닉네임" %>
                            
                              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "비밀번호(6개 이상)" %>
                              
                              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "비밀번호 재입력" %>
                              
                              <div class='text-center'>
                                <%= f.label :gender, "여자" %>
                                <%= f.radio_button(:gender, "여자") %>&nbsp;&nbsp;
                                <%= f.label :gender, "남자" %>
                                <%= f.radio_button(:gender, "남자") %>
                              </div>
                              
                              <%= f.submit "회원가입",class: "btn btn-fill btn-block" %>
                            <% end %>
                            <div class="login">
                                <p>Already have an account? <%= render "devise/shared/links" %>.</p>
                            </div>
                        </div>
                    </div>
                </div>
        </div>     
        
        <div class="demo-footer text-center">
            <h6>&copy; 2016, made with <i class="fa fa-heart heart"></i> by 멋쟁이 사자처럼 at 단국</h6>
        </div>
    </div>
</div> 
/ === Content Part ===
.container-fluid
  .row.equal-height-columns
    %br
    %br
    -# .col-sm-offset-4.col-sm-4.form-block
    .form-block{style: "width: 300px; margin: auto;"}
      %h1.margin-bottom-30.text-center
        내가
        %strong 즐거운
        %br/
        커뮤니티
        = link_to "디쿠", root_path
      = form_for(resource, as: resource_name, url: session_path(resource_name) ) do |f|
        .login-block
          .input-group.margin-bottom-20
            %span.input-group-addon.rounded-left
              %i.fa.fa-user
            = f.text_field :login, class: "form-control rounded-right", placeholder: "닉네임"
          .input-group.margin-bottom-20
            %span.input-group-addon.rounded-left
              %i.fa.fa-key
            = f.password_field :password, class: "form-control rounded-right", placeholder: "비밀번호"
          - if devise_mapping.rememberable?
            .checkbox
              %ul.list-inline
                %li
                  %label
                    = f.check_box :remember_me
                    아이디 기억하기
                -# %li.pull-right
                  = link_to "비밀번호 찾기", new_user_password_path
          .row.margin-bottom-20
            .col-md-12
              = f.submit "로그인", class: "btn-u btn-u-blue btn-block rounded"
          .row.margin-bottom-20
            .col-md-12
              -# = link_to user_omniauth_authorize_path(:facebook), class: " btn btn-block btn-facebook-inversed rounded" do
                %i.fa.fa-facebook
                Login with Facebook
          .row.margin-bottom-20
            .col-md-12
              = link_to "회원가입", new_user_registration_path , class: "btn-u btn-u-aqua btn-block rounded"
/ /container
/ === End Content Part ===

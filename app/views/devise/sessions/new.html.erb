<div class="wrapper full-screen register">
    <div class="background"> 
        <div class="filter-black"></div>
        <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
                        <div class="demo-card">
                            <h3 class="title text-center">어서오세요!</h3>
                            <%= devise_error_messages! %>
                            <br>
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "register-form"}) do |f| %>
                                <label>닉네임 or 학교 웹메일</label>
                                <%= f.text_field :login, class: "form-control", placeholder: "닉네임 or 학교 웹메일" %>
                                
                                <label>비밀번호</label>
                                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "비밀번호" %>
                                                              
                                <% if devise_mapping.rememberable? -%>
                                  <div class="field">
                                    <%= f.check_box :remember_me %>
                                    <%= f.label :remember_me %>
                                  </div>
                                <% end -%>
                                
                                <%= f.submit "로그인", class: "btn btn-danger btn-block" %>
                            <% end %>
                            <div class="forgot">
                                <%= render "devise/shared/links" %>
                            </div>
                        </div>
                    </div>
                </div>
        </div>     
        
        <div class="demo-footer text-center">
            <h6>&copy; 2016, made with <i class="fa fa-heart heart"></i> by 멋쟁이 사자처럼 at 단국</h6>
        </div>
    </div>
</div>